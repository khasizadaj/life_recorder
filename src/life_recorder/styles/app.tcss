#note-view Label {
    margin-left: 2
}

#intro {
    border-bottom: solid $primary;
}

Button {
    margin-left: 2 
}

#note-view #button-delete {
    display: none;
}

ListView {
    background: transparent;
    & > ListItem {
        padding: 1 1;
        border: solid $primary;
    }
}

#notes #button-new {
    margin: 1;
}

#new-note-container {
    border: solid white;
    padding: 0;
}

#new-note-container .error {
    display: none;
    color: $error;
    background: transparent;
}
